---
import { getHomepage } from '../../lib/wp.ts';

import BaseLayout from "../layouts/BaseLayout.astro";
import HeroVideo from "../components/Hero.astro";
import PortfolioGallerySwiper from "../components/PortfolioGallerySwipper.astro";
import ReelsGallery from "../components/ReelsGallery.astro";
import AboutSection from "../components/AboutSection.astro";
import TeamSection from "../components/TeamSection.astro";
import ContactSection from "../components/ContactSection.astro";
import VerticalSection from "../components/VerticalSection.astro";
import WeddingPhoto from "../assets/img/wedding.jpg";
import Photo1 from "../assets/img/member1.jpg";




const images = [
  WeddingPhoto.src, Photo1.src, WeddingPhoto.src, Photo1.src
];

const homepage = await getHomepage();
const videos = homepage?.portfolioVideos ?? [];
const reels = homepage?.reelsVideos ?? [];

const pageTitle = "FilmItNow - Twój film ślubny";

---

<style>
  /* Na małych ekranach – zmniejsz top */

  /* Treść */

  .description-paragraph {
    font-size: 1rem;
    color: #f4e9c3;
    font-family: "Raleway", sans-serif;
    text-align: center;
    margin-top: 1rem;
  }
</style>

<BaseLayout>
  <div id="start">

      <HeroVideo
        videoSrc={homepage.heroVideoUrl ?? ""}
        title={homepage.heroTitle ?? ""}

      />


  </div>

  <div id="portfolio">
  <PortfolioGallerySwiper videos={videos} />
</div>
  <div id="reels">
    <ReelsGallery reels={reels} />
  </div>

  <div id="o-nas">
    <AboutSection
      headline="FILMITNOW"
      subheadline="Artystycznie dokumentujemy największą przygodę życia, staramy się stworzyć film, który naprawdę odzwierciedla Ciebie i Twoje najlepsze wspomnienia. Jesteśmy niedużym zespołem produkcyjnym specjalizującym się w rejestrowaniu celowych, wielodniowych wydarzeń. Znajdujemy się w Katowicach i dostępni jesteśmy na całym świecie."
      leftImages={[WeddingPhoto.src, WeddingPhoto.src]}
      rightImages={[WeddingPhoto.src, WeddingPhoto.src]}
    />
    <TeamSection
      headline="O nas"
      members={[
        {
          photo: Photo1.src,
          name: "Milan",
          role: "Operator kamery",
          bio: "Absolwent Ostravskiego Uniwerystetu Master of Arts z wieloletnim doświadczeniem w pracy w branży filmowej",
        },
        {
          photo: Photo1.src,
          name: "Piotrek",
          role: "Operator kamery",
          bio: "Entuzjasta filmów automotive i dynamicznych ujęć, wieloletnie doświadczenie w branży usług weselnych",
        },
        {
          photo: Photo1.src,
          name: "Iza",
          role: "Montażystka filmów",
          bio: "Doświadczona montażystka filmów ślubnych oraz związanych z mediami społecznościowymi.",
        },
        {
          photo: Photo1.src,
          name: "Klaudia",
          role: "Postprodukcja filmów",
          bio: "Dba o jakość kolorów oraz dźwięku w filmie, wieloletnie doświadczenie w branży",
        },
      ]}
    />
    <div id="kontakt">
      <ContactSection
        headline="Zostańmy w kontakcie"
        description="Zapewniamy niestandardowe usługi dla każdego ślubu. Pomóż nam dowiedzieć się więcej o Twoich uroczystościach, wypełniając poniższy formularz."
        note="Przyjmujemy ograniczoną liczbę wydarzeń na rok 2025 + 2026. Czekamy na wiadomość od Ciebie!"
        contact={{
          phone: "888-061-277",
          email: "filmitnow.pl@gmail.com",
        }}
      />
    </div>

    <VerticalSection images={images} /> 
  
  </div>
</BaseLayout>


---

import movieHero from "../assets/video/hero.mp4";

const reels = [
  movieHero,
  movieHero,
  movieHero,
  movieHero,
  movieHero,
  movieHero,
  movieHero,
  movieHero,
];


let selectedReel = null;
---

<style>
  .reels-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }
  @media (max-width: 768px) {
    .reels-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  .reel-wrapper {
    position: relative;
    aspect-ratio: 9/16;
    overflow: hidden;
    cursor: pointer;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
  }
  .reel-wrapper video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 1rem;
  }
  .modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
  }
  .modal video {
    max-width: 90vw;
    max-height: 90vh;
    border-radius: 1rem;
  }
</style>

<h2 class="text-3xl font-semibold text-center mb-6">Reels</h2>

<div class="relative">
  <div class="reels-grid">
    {reels.map((reel, index) => (
      <div class="reel-wrapper" on:click={() => selectedReel = reel}>
        <video src={reel} muted autoplay loop playsinline preload="metadata" />
      </div>
    ))}
  </div>
</div>

{selectedReel && (
  <div class="modal" on:click={() => selectedReel = null}>
    <video src={selectedReel} controls autoplay></video>
  </div>
)}

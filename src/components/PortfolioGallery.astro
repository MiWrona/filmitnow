---
const { videos = [] } = Astro.props;
---

<!-- Swiper style -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
  .swiper {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
  }

  .video-thumb {
    width: 100%;
    max-width: 400px;
    aspect-ratio: 16 / 9;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    cursor: pointer;
  }

  .video-thumb video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .swiper-button-next,
  .swiper-button-prev {
    color: #000;
  }

  @media (max-width: 1024px) {
    .swiper {
      padding: 1rem 0;
    }
  }
</style>

<h2 class="text-3xl font-semibold text-center mb-6 section-headline">Portfolio</h2>

<div class="swiper">
  <div class="swiper-wrapper">
    {videos.map((video) => (
      <div class="swiper-slide">
        <div class="video-thumb">
          <video src={video} muted autoplay loop playsinline preload="metadata" />
        </div>
      </div>
    ))}
  </div>

  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" type="module" is:browser></script>

<script type="module" is:browser>
  import Swiper from 'https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.esm.browser.min.js';

  new Swiper('.swiper', {
    slidesPerView: 3,
    grid: {
      rows: 2,
      fill: 'row'
    },
    spaceBetween: 20,
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    loop: true,
    breakpoints: {
      1024: {
        slidesPerView: 3,
        grid: { rows: 2 }
      },
      768: {
        slidesPerView: 2,
        grid: { rows: 2 }
      },
      480: {
        slidesPerView: 1,
        grid: { rows: 2 }
      }
    }
  });
</script>

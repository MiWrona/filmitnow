---
const {
  instagram = "https://instagram.com/filmitnow.pl",
  logo = "/logo-small.svg",
  gallery = [],
} = Astro.props;
---

<style>
  .footer {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background: #f5f3ef;
    padding: 4rem 2rem;
    gap: 2rem;
    align-items: center;
  }
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .footer-left img {
    width: 64px;
    height: auto;
  }
  .footer-left a {
    color: #111;
    text-decoration: none;
    font-weight: 500;
    font-size: 1.1rem;
  }
  .footer-gallery {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  .footer-gallery img {
    width: 100%;
    aspect-ratio: 1/1;
    object-fit: cover;
    border-radius: 0.5rem;
  }
  @media (max-width: 768px) {
    .footer {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .footer-left {
      align-items: center;
    }
  }
</style>

<footer class="footer">
  <div class="footer-left">
    <img src={logo} alt="Logo" />
    <a href={instagram} target="_blank" rel="noopener noreferrer">
      Śledź nas na Instagramie<br />@filmitnow.pl
    </a>
  </div>

  <div class="footer-gallery">
    {
      gallery
        .slice(0, 4)
        .map((image, i) => <img src={image} alt={`Galeria ${i + 1}`} />)
    }
  </div>
</footer>
